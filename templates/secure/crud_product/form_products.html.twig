{% extends 'home/index.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	{{parent()}}
	<div class="row">
		<div class="col-12">
			<h1 class="mr-auto mb-0 title-table">{{ title }}</h1>
		</div>
	</div>

	{{ form_start(form) }}

	{% if form_errors(form) %}
		<div class="row">
			<div class="col-12">
				<div class="alert alert-danger">
					{{ form_errors(form) }}
				</div>
			</div>
		</div>
	{% endif %}
	<div class="row my-2">
		<div class="col-12">
			{{ form_row(form.title) }}
		</div>
	</div>


	<div class="row my-2">
		<div class="col-12">
			{{ form_row(form.descriptionEs) }}
		</div>
	</div>


	<div class="row my-2">
		<div class="col-12">
			{{ form_row(form.descriptionEn) }}
		</div>
	</div>

	<div class="row my-2">
		<hr>
		<h3>SKU</h3>
		<div class="col-3">
			{{ form_row(form.category) }}
		</div>
		<div class="col-3">
			{{ form_row(form.brand) }}
		</div>

		<div class="col-3">
			{{ form_row(form.model) }}
		</div>

		<div class="col-3">
			{{ form_row(form.color) }}
		</div>
		<hr>
	</div>


	<div class="row my-2">
		<div class="col-6">
			{{ form_row(form.cod) }}
		</div>
		<div class="col-6">
			{{ form_row(form.part_number) }}
		</div>
	</div>

	<div class="row my-2">
		<div class="col-4">
			{{ form_row(form.weight) }}
		</div>

		<div class="col-4">
			{{ form_row(form.screen_resolution) }}
		</div>

		<div class="col-4">
			{{ form_row(form.screen_size) }}
		</div>
	</div>
	<div class="row my-2">
		<div class="col-4">
			{{ form_row(form.cpu) }}
		</div>
		<div class="col-4">
			{{ form_row(form.gpu) }}
		</div>

		<div class="col-4">
			{{ form_row(form.ram) }}
		</div>
	</div>

	<div class="row my-2">

		<div class="col-4">
			{{ form_row(form.memory) }}
		</div>
		<div class="col-4">
			{{ form_row(form.op_sys) }}
		</div>

		<div class="col-4">
			{{ form_row(form.conditium) }}
		</div>
	</div>


	<div class="row my-2">
		<div class="col-3">
			{{ form_row(form.onhand) }}
		</div>
		<div class="col-3">
			{{ form_row(form.commited) }}
		</div>

		<div class="col-3">
			{{ form_row(form.incomming) }}
		</div>

		<div class="col-3">
			{{ form_row(form.available) }}
		</div>
	</div>
	{% if (product.getImage) %}
		{% for image in product.getImage %}
			<div class="row">
				<div class="col-xs-12 col-md-4">
					<img class="img-fluid" style="width:100%" alt="Imagen" src="{{ asset(image) }}"/>
				</div>
			</div>
		{% endfor %}
	{% endif %}

	<div class="row my-2">
		<div class="col-12">
			{{ form_row(form.image) }}
		</div>
	</div>

	<div>
		<div class="row my-2">

			<div class="col-12 text-end">
				<a class="btn btn-secondary" href="{{ path('secure_crud_brand_index') }}">Regresar</a>

				<button class="btn btn-primary">Guardar</button>
			</div>
		</div>
	</div>


	{{ form_end(form) }}

{% endblock %}
