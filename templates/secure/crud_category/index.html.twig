{% extends 'home/index.html.twig' %}

{% block title %}Categoría{% endblock %}

{% block content %}
<div class="d-flex justify-content-between">
    <h1 class="mr-auto mb-0 title-table">Categoría</h1>
    <a class="btn btn-success" href="{{ path('secure_crud_category_new') }}">Crear nueva</a>
</div>
    <table class="table imagen">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Cantidad de productos</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                {% if category.image %}
                    <td><img class="imagen-grid" alt="Imagen" src="{{ asset(category.image) }}"/></td>
                {% else %}
                    <td><img class="imagen-grid" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
                {% endif %}
                <td>{{ category.name }}</td>
                <td>{{ category.items }}</td>
                <td style="width: 300px">
                    <a style="width: 70px" class="btn btn-info" href="{{ path('secure_crud_category_show', {'id': category.id}) }}">Mostrar</a>
                    <a style="width: 70px" class="btn btn-warning" href="{{ path('secure_crud_category_edit', {'id': category.id}) }}">Editar</a>
                    <a style="width: 108px" class="btn btn-outline-secondary" href="{{ path('secure_crud_subcategory_index', {'id_category': category.id}) }}">Subcategoria</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>
{% endblock %}
