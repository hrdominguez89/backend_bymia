{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_customer_new') }}">Nuevo cliente</a>
			{# <a class="btn btn-success" href="{{ path('secure_crud_customer_new') }}">Importar</a> #}
		</div>

	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 14, &quot;desc&quot; ],[ 2, &quot;asc&quot; ],[ 3, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th data-orderable="false">
								Imagen &nbsp;
							</th>

							<th class="text-center">
								Id. &nbsp;
							</th>

							<th>
								Tipo de cliente &nbsp;
							</th>

							<th>
								Nombres/R.Social &nbsp;
							</th>

							<th>
								Apellidos &nbsp;
							</th>

							<th>
								E-Mail &nbsp;
							</th>

							<th style="width:500px;">
								País &nbsp;
							</th>

							<th>
								Estado/Província &nbsp;
							</th>

							<th>
								Ciudad &nbsp;
							</th>

							<th>
								Dirección &nbsp;
							</th>

							<th class="text-center">
								Cód. Postal &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Tel. Celular &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Tel. Fijo &nbsp;
							</th>

							<th class="text-center">
								Fecha alta &nbsp;
							</th>
							<th class="text-center">
								Estado &nbsp;
							</th>
							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for customer in customers %}

							<tr>
								<td>
									{% if customer.image %}
										<img class="imagen-grid" alt="Imagen" src="{{ asset(customer.image) }}"/>
									{% else %}
										<img class="imagen-grid" alt="Imagen" src="{{ asset('uploads/images/default.png') }}"/>
									{% endif %}
								</td>

								<td class="text-center">
									{{ customer.id }}
								</td>

								<td>
									{{ customer.customer_type_role }}
								</td>

								<td>
									{{ customer.name }}
								</td>

								<td>
									{# Si es 1 es persona y que muestre lastname #}
									{% if (customer.customer_type_role_id == 1) %}
										{{ customer.lastname }}
									{% endif %}
								</td>

								<td>
									<a href="mailto:{{ customer.email }}" title="Enviar correo a {{ customer.email }}">{{ customer.email }}</a>
								</td>

								<td>
									{{ customer.country }}
								</td>
								<td>
									{{ customer.state }}
								</td>

								<td>
									{{ customer.city }}
								</td>

								<td>
									{{ customer.street}}
									{{ customer.number_street}},
									{{customer.floor}}
									{{customer.department}}
								</td>

								<td class="text-center">
									{{ customer.postal_code }}
								</td>

								<td class="text-center">
									{% if customer.country_code_cel_phone %}
										({{ customer.country_code_cel_phone }})
									{% endif %}
									{% if customer.state_code_cel_phone %}
										({{ customer.state_code_cel_phone }})
									{% endif %}

									{{ customer.cel_phone }}
								</td>

								<td class="text-center">
									{% if customer.country_code_phone %}
										({{ customer.country_code_phone }})
									{% endif %}
									{% if customer.state_code_phone %}
										({{ customer.state_code_phone }})
									{% endif %}
									{{ customer.phone }}
								</td>

								<td class="text-center">
									{{customer.registration_date|date("m/d/Y")}}
								</td>

								<td class="text-center">
									{% if customer.status %}
										Habilitado
									{% else  %}
										Deshabilitado
									{% endif %}
								</td>

								<td>
									<a style="font-size:16px" class="text-primary m-2" href="{{ path('secure_customer_addresses', {'customer_id': customer.id}) }}" title="Editar Direcciones">
										<i class="fas fa-map-marked"></i>
									</a>
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_customer_edit', {'id': customer.id}) }}" title="Editar cliente">
										<i class="fas fa-user-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
