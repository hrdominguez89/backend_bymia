{% block content %}

    <div id="form_data" style="display: none;">
        <div class="card-footer text-end">
            <button type="button" id="btn-cancel" class="btn btn-outline-secondary waves-effect" onclick="toggleForm()"
                    data-key="t-cancel">{{ 'Cancel' | trans }}</button>
            <button type="button" id="btn-submit" class="btn btn-primary" onclick="UpdateProduct()"
                    data-key="t-update">{{ 'Update' | trans }}</button>
        </div>
        <div class="row">
            {# Main Form #}
            <div class="col-md-9">
                <input type="hidden" disabled readonly name="id_producto" id="id_producto">
                <label for="large_desc">{{ " LargeDescription" | trans }}</label>
                <textarea  id="large_description" class="mt-1" name="htmlDescription"></textarea>
                <label for="short_desc" class="mt-3">{{ "ShortDescription" | trans }}</label>
                <textarea  id="short_description" class="mt-1" name="short_description"></textarea>
                <div class="card w-100 mt-4">
                    <div class="card-header pt-1 pl-2 pb-1 pr-0" style="background-color: rgba(242,242,242,0.32)">
                        <div class="row">
                            <div class="col-md-3 col-sm-12">
                                <h4 class="card-title mt-2">Datos del Producto</h4>

                            </div>
                            <div class="col-md-9 col-sm-12">
                                <select name="tipo_producto" id="tipo_producto" class="form-select">
                                    <option value="0" disabled>--Tipo de producto--</option>
                                    <option value="1" id="option-1" selected>Producto Simple</option>
                                    <option value="2" id="option-2">Producto Variable</option>
                                </select>

                            </div>
                        </div>
                    </div><!-- end card header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist"
                                     aria-orientation="vertical">
                                    <a class="nav-link mb-2 active" id="v-products-general-tab" data-bs-toggle="pill"
                                       href="#v-products-general" role="tab" aria-controls="v-products-general"
                                       aria-selected="true">General</a>
                                    <a class="nav-link mb-2" id="v-products-inventario-tab" data-bs-toggle="pill"
                                       href="#v-products-inventario" role="tab" aria-controls="v-products-inventario"
                                       aria-selected="false">Inventario</a>
                                    <a class="nav-link mb-2" id="v-products-atributos-tab" data-bs-toggle="pill"
                                       href="#v-products-atributos" role="tab" aria-controls="v-products-atributos"
                                       aria-selected="false">Especificaciones</a>
                                    <a class="nav-link" id="v-products-variaciones-tab" data-bs-toggle="pill"
                                       href="#v-products-variaciones" role="tab" aria-controls="v-products-variaciones"
                                       aria-selected="false" style="display: none">Variaciones</a>
                                </div>
                            </div><!-- end col -->
                            <div class="col-md-9">
                                <div class="tab-content text-muted mt-4 mt-md-0" id="v-pills-tabContent">
                                    <div class="tab-pane fade active show" id="v-products-general" role="tabpanel"
                                         aria-labelledby="v-products-general-tab">
                                        <div class="row">
                                            <div class="col-md-6 col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-price">{{ 'Price' | trans }}</label>
                                                    <input class="form-control" type="number" id="price" name="price"
                                                           required>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-ofert-price">{{ 'Ofert Price' | trans }}</label>
                                                    <input class="form-control" type="number" id="ofert_price"
                                                           name="ofert_price">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-start-ofert-day">{{ 'Start Ofert Day' | trans }}</label>
                                                    <input class="form-control" type="datetime-local"
                                                           id="start_ofert_day"
                                                           name="start_ofert_day" disabled>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-6">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-end-ofert-day">{{ 'End Ofert Day' | trans }}</label>
                                                    <input class="form-control" type="datetime-local"
                                                           id="end_ofert_day"
                                                           name="end_ofert_day" disabled>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="v-products-inventario" role="tabpanel"
                                         aria-labelledby="v-products-inventario-tab">
                                        <label class="form-label" data-key="t-sku">{{ 'SKU' | trans }}</label>
                                        <input class="form-control" type="text" id="sku_product" name="sku_product" disabled>
                                        <p class="mt-3"><strong>Vendido individualmente</strong>
                                            <input type="checkbox" class="form-check" id="vendido_individualmente"
                                                   name="vendido_individualmente">
                                            <i>"Activa esto para permitir que solo se pueda comprar uno de estos
                                                art√≠culos en cada pedido"</i>
                                        </p>
                                    </div>
                                    <div class="tab-pane fade" id="v-products-atributos" role="tabpanel"
                                         aria-labelledby="v-products-atributos-tab">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-type-especifications">{{ 'Type Especifications' | trans }}</label>
                                                    <select class="form-select" id="type_especifications"
                                                            name="type_especifications">
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-especifications">{{ 'Especifications' | trans }}</label>
                                                    <select class="form-select" id="especifications"
                                                            name="especifications">
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-7 col-sm-7 col-sm-12">
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                           data-key="t-value">{{ 'Value' | trans }}</label>
                                                    <textarea class="form-control" id="value" name="value" required
                                                              disabled
                                                              placeholder="Escriba los valores para la especificacion separando cada uno con <<,>>"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-lg-5 col-sm-5 col-sm-12">
{#                                                <div class="mt-2" id="uso_variaciones">#}
{#                                                    <input type="checkbox" id="uso_variaciones_check">#}
{#                                                    <label for="uso_variaciones"> Usado para variaciones</label>#}
{#                                                </div>#}
                                                <div class="mb-3 mt-4">
                                                    <button type="button" id="btn-cancel"
                                                            class="btn btn-secondary waves-effect w-100"
                                                            onclick="insertSpecifications()"
                                                            data-key="t-apply">{{ 'Apply' | trans }}</button>
                                                </div>
                                            </div>
                                        </div>

                                        {#       --table--         #}
                                        <table class="table table-sm m-0">
                                            <thead class="table-light">
                                            <tr>
                                                <th data-key="t-type-especifications">{{ 'Type Especifications' | trans }}</th>
                                                <th data-key="t-especifications">{{ 'Especifications' | trans }}</th>
                                                <th data-key="t-value">{{ 'Value' | trans }}</th>
                                                <th data-key="t-variacion">{{ 'Variaci√≥n' | trans }}</th>
                                                <th><i class="fa fa-trash text-danger"></i></th>
                                            </tr>
                                            </thead>
                                            <tbody id="rows">
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="v-products-variaciones" role="tabpanel"
                                         aria-labelledby="v-products-variaciones-tab">
                                        <div class="accordion accordion-flush mt-3" id="accordionFlushExample">
                                        </div>
                                    </div>
                                </div>
                            </div><!--  end col -->
                        </div><!-- end row -->
                    </div><!-- end card-body -->
                </div>
            </div>
            {# Layout rigth#}
            <div class="col-md-3">
                <div class="card w-100">
                    <div class="card-header pt-1 pl-2 pb-1 pr-0" style="background-color: rgba(242,242,242,0.32)">
                        <h5 class="modal-title" data-key="t-category">{{ 'Category' | trans }}</h5>
                    </div>
                    <div class="card-body p-1">
                        <div id="datatable-category">
                        </div>
                    </div>
                </div>
                <div class="card w-100 mt-4">
                    <div class="card-header pt-1 pl-2 pb-1 pr-0" style="background-color: rgba(242,242,242,0.32)">
                        <h5 class="modal-title" data-key="t-tag">{{ 'Tag' | trans }}</h5>
                    </div>
                    <div class="card-body p-1">
                        <div class="row">
                            <div class="col-md-8 col-sm-12">
                                <select class="form-select w-100 mt-2" id="tags">
                                </select>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <button type="button" id="btn-add-tag" onclick="addTag()"
                                        class="btn btn-primary waves-effect btn-primary text-white w-100 mt-2 fa fa-plus"></button>
                            </div>
                        </div>
                        <div class="mt-3 flex flex-wrap" id="container_tag">
                        </div>
                    </div>
                </div>

                <div class="card w-100 mt-4">
                    <div class="card-header pt-1 pl-2 pb-1 pr-0" style="background-color: rgba(242,242,242,0.32)">
                        <h5 class="modal-title" data-key="t-brand">{{ 'Brand' | trans }}</h5>
                    </div>
                    <div class="card-body p-1">
                        <div class="row">
                            <div class="col-md-8 col-sm-12">
                                <select class="form-select w-100 mt-2" id="brand_select">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header pt-1 pl-2 pb-1 pr-0" style="background-color: rgba(242,242,242,0.32)">
                        <h5 class="modal-title" data-key="t-main-image">{{ 'Main Image' | trans }}</h5>
                    </div>
                    <div class="card-body p-1">
                        <div id="uploadMain" class="form-group">                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header pt-1 pl-2 pb-1 pr-0" style="background-color: rgba(242,242,242,0.32)">
                <h5 class="modal-title" data-key="t-all-image">{{ 'All Image' | trans }}</h5>
            </div>
            <div class="card-body p-4">
                <div id="uploadAll" class="form-group">                    
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="button" id="btn-cancel" class="btn btn-outline-secondary waves-effect" onclick="toggleForm()"
                    data-key="t-cancel">{{ 'Cancel' | trans }}</button>
            <button type="button" id="btn-submit" class="btn btn-primary" onclick="UpdateProduct()"
                    data-key="t-update">{{ 'Update' | trans }}</button>
        </div>
    </div>
{% endblock %}



