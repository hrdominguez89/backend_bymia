{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{parent()}}
	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
		<a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                                                Link with href
                                            </a>
											<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel" style="visibility: hidden;" aria-hidden="true">
                                            <div class="offcanvas-header">
                                                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Offcanvas</h5>
                                                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <div class="offcanvas-body">
                                                <div>
                                                    Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
                                                </div>
                                                <div class="dropdown mt-3">
                                                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Dropdown button <i class="mdi mdi-chevron-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
                                                        <li><a class="dropdown-item" href="#">Action</a></li>
                                                        <li><a class="dropdown-item" href="#">Another action</a></li>
                                                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[1, &quot;asc&quot;]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Id 3PL &nbsp;
							</th>

							<th>SKU &nbsp;</th>

							<th>Cod. &nbsp;</th>

							<th>Part number &nbsp;</th>

							<th>Nombre corto &nbsp;</th>

							<th>Nombre largo &nbsp;</th>

							<th>Marca &nbsp;</th>

							<th>Categoría &nbsp;</th>

							<th>Subcategoría &nbsp;</th>

							<th>Peso &nbsp;</th>

							<th>Precio &nbsp;</th>

							<th>Cant. en Warehouse &nbsp;</th>

							<th>Cant. Reservado en Warehouse &nbsp;</th>

							<th>Cant. por llegar a Warehouse &nbsp;</th>

							<th>Cant. disponible en Warehouse &nbsp;</th>

							<th>Condición &nbsp;</th>

							<th>Alta en ByMia &nbsp;</th>

							<th>Alta en 3PL &nbsp;</th>

							<th>Ultima actualización en 3PL &nbsp;</th>

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for product in products %}
							<tr>
								<td class="text-center">
									{{product.id}}
								</td>


								<td class="text-center">
									{{product.id3pl}}
								</td>

								<td>{{product.sku}}</td>

								<td>{{product.cod}}</td>

								<td>{{product.partNumber}}</td>

								<td>{{product.shortName}}</td>

								<td>{{product.longName}}</td>

								<td>{{product.brand}}</td>

								<td>{{product.category}}</td>

								<td>{{product.subcategory}}</td>

								<td>{{product.weight}}</td>

								<td>{{product.cost}}</td>

								<td>{{product.onhand}}</td>

								<td>{{product.commited}}</td>

								<td>{{product.incomming}}</td>

								<td>{{product.available}}</td>

								<td>{{product.condition}}</td>

								<td data-order="{{product.createdAt ? product.createdAt|date('U'):0}}" class="text-center">{{product.createdAt ? product.createdAt|date("d/m/Y"):'-'}}</td>

								<td data-order="{{product.createdAt3pl ? product.createdAt3pl|date('U'):0}}" class="text-center">{{product.createdAt3pl ? product.createdAt3pl|date("d/m/Y"):'-'}}</td>

								<td data-order="{{product.updatedAt3pl ? product.updatedAt3pl|date('U'):0}}" class="text-center">{{product.updatedAt3pl ? product.updatedAt3pl|date("d/m/Y"):'-'}}</td>

								<td
									class="text-center">{# <a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_city_edit', {'country_id':country.id,'state_id':state.id,'city_id':city.id}) }}" title="Editar ciudad">
																																																																																																																																																																																																																																																																				<i class="fas fa-edit"></i>
																																																																																																																																																																																																																																																																			</a> #}
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
