		<div class="d-flex justify-content-between"> <div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>

		<div class="col-6 text-end">
			<a class="btn btn-success" href="{{ path('secure_crud_state_new',{'country_id':country.id}) }}">Nuevo estado/provincia</a>
		</div>

	</div>
	<div class="row mt-2">
		<div class="col-12">
			<h4>Pais:{{country.name}}</h4>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 1, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th class="text-center">
								Id. &nbsp;
							</th>

							<th>
								Estado &nbsp;
							</th>

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for state in states %}
							<tr>
								<td class="text-center">
									{{state.id}}
								</td>


								<td>
									{{state.name}}
								</td>

								<td class="text-center">
									<a style="font-size:16px" class="text-primary m-2" href="{{ path('secure_crud_cities_index', {'country_id':country.id,'state_id':state.id}) }}" title="Ver ciudades">
										<i class="fas fa-eye"></i>
									</a>
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_state_edit', {'country_id':country.id,'state_id':state.id}) }}" title="Editar estado">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
