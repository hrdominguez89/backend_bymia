{% extends 'home/index.html.twig' %}
{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	{{ parent() }}

	<div class="d-flex justify-content-between">
		<div class="col-6">
			<h1 class="mr-auto mb-0 title-table">{{title}}</h1>
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12">
			<div class="table-responsive">
				<table id="table_full_buttons" class="table table-striped table-sm nowrap" data-order="[[ 2, &quot;asc&quot; ]]">
					<thead>
						<tr>
							<th data-type="num" class="text-center">
								Id. &nbsp;
							</th>

							<th data-type="num" class="text-center">
								Id 3PL &nbsp;
							</th>

							<th>
								Nombre &nbsp;
							</th>

							<th>
								Slug &nbsp;
							</th>

							<th data-orderable="false">
								Imagen &nbsp;
							</th>
							{# <th class="text-center">
															Visible &nbsp;
														</th> #}

							<th class="text-center" data-orderable="false">
								Acciones &nbsp;
							</th>

						</tr>
					</thead>
					<tbody>
						{% for brand in brands %}

							<tr>

								<td class="text-center">
									{{brand.id}}
								</td>


								<td class="text-center">
									{{brand.apiId}}
								</td>

								<td>
									{{brand.name}}
								</td>

								<td>
									{{brand.slug}}
								</td>
								<td>
									{% if brand.image %}
										<img class="imagen-grid" alt="Imagen" src="{{ asset(brand.image) }}"/>
									{% else %}
										<img class="imagen-grid" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/>
									{% endif %}
								</td>
								{#
                                <td>
                                    <a style="font-size:16px" data-status="{{country.visible ? 'on':'off'}}" data-slug="/secure/world/updateVisible/Countries" data-id="{{country.country_id}}" class="text-{{country.visible ? 'success':'secondary'}} m-2 toggle-on-off" href="javascript:void(0);">
                                    {{brand.visible}}
                                        <i class="fas fa-toggle-{{country.visible ? 'on':'off'}}"></i>
                                    </a>
                                </td>#}


								<td class="text-center">
									<a style="font-size:16px" class="text-warning m-2" href="{{ path('secure_crud_brand_edit', {'id': brand.id}) }}" title="Editar marca">
										<i class="fas fa-edit"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row mt-5 mb-5">
		<div class="col-12 text-end">
			<a class="btn btn-secondary" href="{{ path('app_homepage') }}">Regresar</a>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}
