{% extends 'home/index.html.twig' %}

{% block title %}Imagen de Portada{% endblock %}

{% block content %}
<div class="d-flex justify-content-between">
    <h1 class="mr-auto mb-0 title-table">Imagen de Portada</h1>
    <a class="btn btn-success" href="{{ path('secure_cover_image_new') }}">Crear nueva</a>
</div>
    <table class="table imagen">
        <thead>
            <tr>               
                <th>Imagen Grande</th>
                <th>Imagen Pequeña</th>
                <th>Título</th>
                <th class="text-center">Principal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cover_image in cover_images %}
            <tr>   
                {% if cover_image.imageLg %}
                    <td><img class="imagen-grid" alt="Imagen" src="{{ asset(cover_image.imageLg) }}"/></td>
                {% else %}
                    <td><img class="imagen-grid" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
                {% endif %}  
                {% if cover_image.imageSm %}
                    <td><img class="imagen-grid" alt="Imagen" src="{{ asset(cover_image.imageSm) }}"/></td>
                {% else %}
                    <td><img class="imagen-grid" alt="Imagen" src="{{ asset('uploads/images/default.jpg') }}"/></td>
                {% endif %}                 
                <td>{{ cover_image.title }}</td>
                <td class="text-center">
                    {% if cover_image.main %}
                        <i class="fas fa-check-circle text-success"></i>
                    {% else %}
                        <i class="fas fa-minus-circle text-danger"></i>
                    {% endif%}</td>
                <td style="width: 200px;">
                    <a style="width: 70px;" class="btn btn-info" href="{{ path('secure_cover_image_show', {'id': cover_image.id}) }}">Mostrar</a>
                    <a style="width: 70px;" class="btn btn-warning" href="{{ path('secure_cover_image_edit', {'id': cover_image.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no se encontraron datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
